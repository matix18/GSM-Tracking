{% extends 'base.html.twig' %}

{# {% form_theme form 'bootstrap_4_layout.html.twig' %} #}

{% block body %}

<!doctype html>
<html lang="fr">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>Material Bootstrap Wizard by Creative Tim</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

	<link rel="apple-touch-icon" sizes="76x76" href="../../home/assets/img/apple-icon.png" />
	<link rel="icon" type="image/png" href="../../home/assets/img/favicon.png" />

	<!--     Fonts and icons     -->
	<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

	<!-- CSS Files -->
	<link href="../../home/assets/css/bootstrap.min.css" rel="stylesheet" />
	<link href="../../home/assets/css/material-bootstrap-wizard.css" rel="stylesheet" />

	<!-- CSS Just for demo purpose, don't include it in your project -->
	<link href="../../home/assets/css/demo.css" rel="stylesheet" />
</head>

<body>
	<div class="image-container set-full-height" style="background-image: url('../../home/assets/img/wizard-book.jpg')">
	    <!--   Creative Tim Branding   -->
	    <a href="http://creative-tim.com">
	         <div class="logo-container">
	            <div class="logo">
	                {# <img src="../../home/assets/img/new_logo.png"> #}
	            </div>
	            <div class="brand">
	                <a href="{{ path('manager') }}" style="color:#fff">Retour</a>
	            </div>
	        </div>
	    </a>

	    <!--   Big container   -->
	    <div class="container">
	        <div class="row">
		        <div class="col-sm-8 col-sm-offset-2">
		            <!--      Wizard container        -->
		            <div class="wizard-container">
		                <div class="card wizard-card" data-color="red" id="wizard">
		                    <form action="" method="">
		                <!--        You can switch " data-color="blue" "  with one of the next bright colors: "green", "orange", "red", "purple"             -->

		                    	<div class="wizard-header">
		                        	<h3 class="wizard-title">
		                        		Interface Manager
		                        	</h3>
									<h5>Ces informations vous aideront à manager l'application.</h5>
		                    	</div>
								<div class="wizard-navigation">
									<ul>
			                            <li><a href="#captain" data-toggle="tab">Menu vols</a></li>
			                        </ul>
								</div>

		                        <div class="tab-content">
		                            <div class="tab-pane" id="captain">
		                                <h4 class="info-text">Quel service voulez-vous demarrer ? </h4>
		                                <div class="row">
		                                    <div class="col-sm-10 col-sm-offset-2">
		                                        <div class="col-sm-4">
		                                            <div class="choice" data-toggle="wizard-radio" rel="tooltip" title="Sélectionne cette option voir les bagage déjà enrégistrés.">
		                                                <input type="radio" name="job" value="Code">
		                                                <div class="icon">
		                                                    <a href="{{ path('compagnie_aeriennes_new') }}"><i class="material-icons">home</i></a>
		                                                </div>
		                                                <h6>Compagnies Aériennes</h6>
		                                            </div>
		                                        </div>
												<div class="col-sm-4">
		                                            <div class="choice" data-toggle="wizard-radio" rel="tooltip" title="Sélectionne cette option pour ouvrir un nouveau vol.">
		                                                <input type="radio" name="job" value="Code">
		                                                <div class="icon">
		                                                    <a href="{{ path('vols_new') }}"><i class="material-icons">airplanemode_active</i></a>
		                                                </div>
		                                                <h6>Ouvir un vol</h6>
		                                            </div>
		                                        </div>
		                                    </div>
		                                </div>
		                            </div>
		                        </div>
	                        	<div class="wizard-footer">
	                            	<div class="pull-right">
	                                    {# <input type='button' class='btn btn-next btn-fill btn-danger btn-wd' name='next' value='Next' /> #}
	                                    {# <input type='button' class='btn btn-finish btn-fill btn-danger btn-wd' name='finish' value='Finish' /> #}
	                                </div>
	                                <div class="pull-left">
	                                    {# <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' /> #}

										<div class="footer-checkbox">
											<div class="col-sm-12">
											  <div class="checkbox">
												  <label>
													  <a href="{{ path('manager') }}">Retour</a>
												  </label>
												  {# Subscribe to our newsletter #}
											  </div>
										  </div>
										</div>
	                                </div>
	                                <div class="clearfix"></div>
	                        	</div>
		                    </form>
		                </div>
		            </div> <!-- wizard container -->
		        </div>
	    	</div> <!-- row -->
		</div> <!--  big container -->

	    <div class="footer">
	        <div class="container text-center">
	             Fait avec <i class="fa fa-heart heart"></i> par Aimé YEMBI & Prince KANDZA.
	        </div>
	    </div>
	</div>

</body>
	<!--   Core JS Files   -->
	<script src="../../home/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
	<script src="../../home/assets/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="../../home/assets/js/jquery.bootstrap.js" type="text/javascript"></script>

	<!--  Plugin for the Wizard -->
	<script src="../../home/assets/js/material-bootstrap-wizard.js"></script>

	<!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
	<script src="../../home/assets/js/jquery.validate.min.js"></script>
</html>


{% endblock %}
